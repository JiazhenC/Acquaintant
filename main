import 'package:flutter/material.dart';

void main() {
  runApp(MaterialApp(
      home: Main_menu()
  )
  );
}

class Main_menu extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return Scaffold(
        body: Center(
          child: Column(
            mainAxisAlignment: MainAxisAlignment.center,
            children: <Widget>[
              new Image.asset('assets/images/logo2.png', height: 200,),
              new Padding(padding: EdgeInsets.all(60)),
              Column(
                children: [
                  ButtonTheme(
                    buttonColor: Colors.white,
                    minWidth: 200,
                    child: RaisedButton(
                      onPressed: () {
                        Navigator.push(
                          context,
                          MaterialPageRoute(builder: (context)=> Page2()),
                        );
                      },
                      child: Text("View Fair"),
                    ),
                  ),
                  ButtonTheme(
                      buttonColor: Colors.white,
                      minWidth: 200,
                      child: RaisedButton(
                        onPressed: () {
                          Navigator.push(
                            context,
                            MaterialPageRoute(builder: (context)=> Page2()),
                          );
                        },
                        child: Text("Student Profiling Survey"),
                      )
                  ),
                ],
              ),
            ],
          ),
        )
    );
  }
}

class Page2 extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      body: Center(
          child: Container(
              color: Colors.white,
              child: RaisedButton(
                  child: Text("2"),
                  onPressed: () {
                    Navigator.pop(
                        context
                    );
                  }
              )
          )
      ),
    );
  }
}

